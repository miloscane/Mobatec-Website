    </head>
    <body>
        <div class="background" style="background-image:url('<%=bucket%>/images/edu-lic.jpeg')"></div>
        <div class="header">
            <img src="<%=bucket%>/logos/Mobatec-White-Logo.svg" width="150">
        </div>
        <div class="content">
            <div style="text-align:center;">
                <img src="<%=bucket%>/logos/Mobatec-Modeller-White.svg" width="150">
            </div>
            <div class="formWrapper">
                <div class="topWrap">
                    <div class="left"></div>
                    <div class="middle"></div>
                    <div class="right"></div>
                </div>
                <div class="form">
                    <div class="title" style="text-align:center;margin-bottom:20px;padding-top:20px">Please log in to view course material</div>
                    <form method="POST" action="/courses-login" id="form">
                        <div class="inputsWrap">
                            <div class="inputWrap">
                                <input type="email" placeholder="E-mail" name="email" id="email">
                            </div>
                            <div class="inputWrap">
                                <input type="password" placeholder="Password" name="password" id="password">
                            </div>
                            <input type="number" name="type" style="display:none" id="type">
                            <div class="note">Forgot your password? Type your e-mail address in the form above and click <span style="color:rgb(20,255,20);text-decoration: underline;" onclick="submitForm(1)">here</span> to receive an e-mail to reset your password.</div>
                            <div id="error"></div>
                        </div>
                    </form>
                    <div style="text-align:center;">
                        <div class="submitButton" onclick="submitForm(0)">Login</div>
                    </div>
                    <script>
                        function showError(errstring){
                            document.getElementById("error").innerHTML  =   errstring;
                        }

                        function emailIsValid(email) {
                            const re = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                            return re.test(String(email).toLowerCase());
                        }

                        function submitForm(typeSubmit){
                            document.getElementById("type").value   =   typeSubmit;
                            if(!emailIsValid(document.getElementById("email").value)){
                                showError("Provided e-mail seems invalid. Please provide a proper e-mail address");
                            }else{
                                document.getElementById("form").submit();
                            }
                        }

                        document.getElementById("email").addEventListener("keyup", function(event) {
                          // Number 13 is the "Enter" key on the keyboard
                          if (event.keyCode === 13) {
                            // Cancel the default action, if needed
                            event.preventDefault();
                            // Trigger the button element with a click
                            submitForm();
                          }
                        });

                        document.getElementById("password").addEventListener("keyup", function(event) {
                          // Number 13 is the "Enter" key on the keyboard
                          if (event.keyCode === 13) {
                            // Cancel the default action, if needed
                            event.preventDefault();
                            // Trigger the button element with a click
                            submitForm();
                          }
                        });
                    </script>
                </div>
            </div>
        </div>
        <div class="footer">
            Copyright &#169; 2022, Mobatec<br>KVK: 1408 4360<br>BTW: NL 8142.56.041.B01
        </div>
    </body>
</html>